.expore-encounter{
  flex 2
  background-color: antiquewhite

  .fps-view {
    width: 200px
    height: 200px
    margin: 10px
    background: linear-gradient(#bbb, #111 40%, #111 60%, #f69d3c)
    position: relative
    overflow: hidden

    .fps-square {
      position: absolute
      background: radial-gradient(transparent 40%,#222 92%);
      &.wall {
        background-color: grey
      }
      &.door {
        background-color: brown
      }
      &.none {
        display: none
      }
      &.left {
        width: 120px
        height: 120px
        top: 40px
        left: -20px
        transform: perspective(140px) rotate3d(0, 1, 0, 65deg) translateX(-60px)
        z-index: 5
        &.forward {
          transform: perspective(140px) rotate3d(0, 1, 0, 65deg) translateX(60px)
          z-index: 3
        }
      }
      &.front {
        width: 120px
        height: 120px
        top: 40px
        left: 40px
        z-index: 4
      }
      &.right {
        width: 120px
        height: 120px
        top: 40px
        right: -20px
        transform: perspective(140px) rotate3d(0, 1, 0, -65deg) translateX(60px)
        z-index: 5
        &.forward {
          transform: perspective(140px) rotate3d(0,1,0,-65deg) translateX(-60px)
          z-index: 3
        }
      }
    }
  }
}