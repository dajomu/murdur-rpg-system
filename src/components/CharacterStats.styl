.character-stats {
  display: flex;
  flex-direction: column;
  flex: 5;
  background-color: #c0c0c0;

  .character-name {
    text-align: center;
    padding: 15px;
    font-weight: 600;
  }

  .top-tabs {
    height: 35px;
    display: flex;
    flex-direction: row;

    .tab {
      flex: 1;
      padding: 5px 10px;

      &.active {
        border: 1px solid darkgrey;
      }
    }
  }
}