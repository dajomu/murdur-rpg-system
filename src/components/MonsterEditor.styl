.edit-screen-edits {
    display: flex;
    flex-direction: row;

    .edit-screen-monster {
        padding-right: 20px;
        label {
            width: 100px;
            display: inline-block;
        }
    }

    .edit-screen-monster-group {
        flex: 1;

        .edit-monster-group-group {
            border: 1px solid black;
            border-radius: 5px;
            padding: 10px;
            margin: 10px;
            position: relative;
        }
    }

    .add-new-monster-button {
        width: 25px;
        height: 25px;
    }

    .remove-monster-group-button {
        width: 25px;
        height: 25px;
        position: absolute;
        top: 5px;
        right: 5px;
    }
}