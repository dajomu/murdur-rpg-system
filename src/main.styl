html, body, #root, #root .App {
  height: 100%;
}

.explore-screen {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;

  .character-menu {
    display: flex;
    flex-direction: column;
    flex: 1;
    .character-inventory {
      flex: 4;
      background-color: darkseagreen;
    }
    .party {
      height: 100px;
      background-color: mistyrose;
    }
  }
  
  .explore-pane {
    display: flex
    flex-direction: column
    flex: 2
    .expore-encounter{
      flex 2
      background-color: antiquewhite
    }
  }
}

.toggle-audio-button {
  position: absolute
  top: 0
  right: 0

  img {
    width: 25px
    height: 25px
  }
}

@require './components/CharacterInfoPanel';
@require './components/CharacterStats';
@require './components/MapPanel';
@require './components/MessagesPanel';